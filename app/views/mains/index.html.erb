<h1> サンプル </h1>

<h2> 食べ物リスト </h2>

<table>
  <tr>
    <th> ID </th>
    <th> 名前 </th>
    <th> 値段 </th>
  </tr>

  <% @foods.each do |food| %>
    <tr>
      <td><%= food.id %></td>
      <td><%= food.name %></td>
      <td><%= food.price %></td>
    </tr>
  <% end %>

</table>

<br>
<br>
<br>

<%= form_with(model: @food, url: mains_path, method: :post) do |f| %>
  <div>
    <%= f.label :name, "食品名" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :price, "値段" %>
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>